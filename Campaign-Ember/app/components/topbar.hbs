<div class="topbar">
    <div class="app-title">
        <LinkTo @route="index" class="topbar-index">
            <h1>Campaign Tracker</h1>
        </LinkTo>
    </div>
    <div class="campaign-title">
        <LinkTo @route="home" class="topbar-home">
            <h2>Etherus</h2>
        </LinkTo>
    </div>
    <div class="user-profile">
        <button class="user-icon" type="button" {{on "click" this.toggleDropdown}}>
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="user-svg" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
            </svg>
        </button>
        {{#if this.DropdownVisible}}
            <ul class="user-dropdown {{if this.DropdownVisible 'visible'}}">
                <li><a href="/profile">Profile</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><button type="button" {{on "click" this.toggleTheme}}>{{if this.DarkMode "Light" "Dark"}} Mode</button></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        {{/if}}
    </div>
</div>